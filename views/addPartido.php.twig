{% extends "plantilla.base.php.twig" %}
{% block contenido %}
    <h1 class="h1 mt-4">Añadir partido</h1>

    <form action="" method="get">
        <input type="hidden" name="con" value="admin" />
        <input type="hidden" name="ope" value="add" />
        <div class="form-group">
            <label for="nombre">Nombre</label>
            <input type="text" class="form-control" id="nombre" name="nombre" placeholder="Escribe el nombre del partido">
        </div>
        <div class="form-group">
            <label for="fecha">Fecha</label>
            <input type="date" class="form-control" id="fecha" name="fecha" placeholder="Escribe la fecha">
        </div>
        <div class="form-group">
            <label for="hora">Hora</label>
            <input type="time" class="form-control" id="hora" name="hora" placeholder="Escribe la hora">
        </div>
          <div class="form-group">
            <label for="idPista">Pista</label>
            <select class="form-control" id="idPista" name="idPista">
                <option selected>Elige una pista</option>
                {% for pista in data %}
                <option value="{{ pista.idPista }}">{{ pista.nombreP }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
        <a href="index.php"><button class="btn btn-light">Volver atrás</button></a>
    </form>
{% endblock %}